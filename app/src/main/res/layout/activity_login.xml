<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="335dp"
        android:layout_height="381dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/logo" />
    <LinearLayout
        android:layout_below="@id/imageView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/loginPhone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_phone"
        android:text=" Đăng Nhập Bằng Số Điện Thoại"
        android:textColor="@color/black"
        android:layout_marginStart="50dp"
        android:background="@drawable/boderedittext"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        />

        <TextView
            android:id="@+id/loginGg"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_gg"
            android:background="@drawable/boderedittext"
            android:text=" Đăng Nhập Bằng Google"
            android:textColor="@color/black"
            android:layout_marginStart="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/loginfb"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_fb"
            android:background="@drawable/boderedittext"
            android:text=" Đăng Nhập Bằng Facebook"
            android:textColor="@color/black"
            android:layout_marginStart="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            />

    </LinearLayout>

</RelativeLayout>